
	<div class="row">

		<div class='span0 well text-center'>
			<%= link_to vote_post_path(post, vote: true), method: 'post' do %>
				<i class='icon-arrow-up'></i>
			<% end %>
			<br>
			<%=  post.total_votes %> votes
			<br>
			<%= link_to vote_post_path(post, vote: false), method: 'post' do %>
				<i class='icon-arrow-down'></i>
			<% end %>
		</div>


		<div class='span8 well'>		
			<%= render post.categories %>
			<% if logged_in? %>
				<h4><%=link_to post.title, fix_url(post.url) %></h4>
				<%=link_to 'Edit', edit_post_path(post) %>
			<% end %>
			<p><%=post.description%></p>
			<p>
				<span class='quite'>Posted by</span>
				 <%= link_to post.creator.username, user_path(post.creator) %>
					at <small><%= display_datetime(post.created_at) %></small>
			</p>
			<small>
				<span>
					<%= link_to("#{post.comments.size} comments", post_path(post)) %>
				</span>
			</small>	
		</div>
	</div>