<div class='alert alert-errors'>
<% if @post.errors.any? %>
	<h5>There were some errors:</h5>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %></div>

<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :url, "Url" %>
	<%= f.text_field :url %>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br>
	<%= f.submit "Create/Edit Post", class: 'btn btn-primary' %>
<% end %>