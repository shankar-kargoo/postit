
<% obj = @post %>
<%= render 'shared/errors', obj: @post %>




<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :url, "Url" %>
	<%= f.text_field :url %>
	<%= f.label :description %>
	<%= f.text_area :description, rows: 5, class: 'span5' %>
	<br>
	<%= f.submit (@post.new_record? ? 'Create Post' : 'Update Post'), class: 'btn btn-primary' %>
<% end %>