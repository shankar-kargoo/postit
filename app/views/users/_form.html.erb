<div class='well'>

	<%= form_for @user do |f| %>
	<%= render 'shared/errors', obj: @user %>
	<div class='control-group'>
		<%= f.label :username %>
		<%= f.text_field :username %>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<%= f.label :phone, "Phone Number <small>(numbers only; optional)</small>".html_safe %>
		<%= f.text_field :phone, maxlength: 10 %>
		<%= link_to '#', id: 'two_factor_phone' do %>
			<i class='icon-question-sign'></i>
		<% end %>

		<%= f.label :time_zone %>
		<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>

	</div>
		<%= f.submit (@user.new_record? ? "Register" : "Update Profile"), class: 'btn btn-success' %>
	<% end %>
</div>